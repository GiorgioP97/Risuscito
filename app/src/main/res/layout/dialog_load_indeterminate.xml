<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:risuscito="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:paddingLeft="@dimen/adp_mtrl_alert_dialog_padding"
        android:paddingTop="@dimen/adp_mtrl_alert_dialog_padding_top"
        android:paddingRight="@dimen/adp_mtrl_alert_dialog_padding"
        android:paddingBottom="@dimen/adp_mtrl_alert_dialog_padding_top">

        <!--<com.alertdialogpro.material.ProgressBarCompat-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:max="10000"-->
        <!--android:layout_marginEnd="@dimen/adp_mtrl_alert_dialog_padding"-->
        <!--android:layout_marginRight="@dimen/adp_mtrl_alert_dialog_padding" />-->
        <com.rey.material.widget.ProgressView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/adp_mtrl_alert_dialog_padding"
            android:layout_marginRight="@dimen/adp_mtrl_alert_dialog_padding"
            risuscito:pv_autostart="true"
            risuscito:pv_circular="true"
            risuscito:pv_progressStyle="@style/Material.Drawable.CircularProgress.Risuscito"
            risuscito:pv_progressMode="indeterminate"/>

        <TextView
            android:id="@+id/loading_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</FrameLayout>