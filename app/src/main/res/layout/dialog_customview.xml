<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:baselineAligned="false"
        android:paddingTop="@dimen/adp_mtrl_alert_dialog_padding_top"
        android:paddingBottom="@dimen/adp_mtrl_alert_dialog_padding_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.internal.widget.TintEditText
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:inputType="text|textCapSentences"
            android:textColorHighlight="@color/ripple_color"
            android:gravity="start"
            android:textAlignment="viewStart" />

    </LinearLayout>

</FrameLayout>