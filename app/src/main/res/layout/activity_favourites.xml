<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/no_favourites"
            android:layout_marginLeft="@dimen/activity_min_margin"
            android:layout_marginRight="@dimen/activity_min_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_favourites" />

        <android.support.v7.widget.RecyclerView
            android:layout_width= "match_parent"
            android:layout_height = "0dp"
            android:id="@+id/favouritesList"
            android:layout_weight="0.99" />

        <TextView
            android:id="@+id/hint_remove"
            android:layout_marginLeft="@dimen/activity_min_margin"
            android:layout_marginRight="@dimen/activity_min_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_remove" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?toolbar_shadow" />

</FrameLayout>
