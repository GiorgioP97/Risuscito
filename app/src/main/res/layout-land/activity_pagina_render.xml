                        risuscito:fab_colorNormal="@color/theme_accent"
                        risuscito:fab_colorPressed="@color/theme_primary"
                        risuscito:fab_icon="@drawable/ic_fullscreen_white_24dp"
                        risuscito:fab_size="mini" />

